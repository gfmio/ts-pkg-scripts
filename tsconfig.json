{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declarationMap": false,
    "noEmit": true
  },
  "include": ["src/**/*"]
}
